<script>
  function trackTrial() {
    plausible('Signup');
  }
</script>

<div class="min-h-full flex items-center justify-center py-12 px-6 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-primary">Create Your Account</h2>
      <p class="mt-2 text-center text-gray-600 dark:text-light-grey">Free 30 day trial <span class="text-xs text-blue">no credit card</span></p>
    </div>
    <%= form_for @changeset, Routes.signup_path(@conn, :create_organization_trial, plan: @plan), fn f -> %>

      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="password" class="sr-only">Current Password</label>
          <%= text_input f, Pow.Ecto.Schema.user_id_field(@changeset), type: "email", autocomplete: "email", class: "appearance-none rounded-none relative block w-full px-3 py-2 border dark:bg-black dark:text-white text-black border-t-[.5px] border-light-grey dark:border-dark-grey sm:text-sm", placeholder: "Your Company Email" %>
        </div>

        <div>
          <label for="password" class="sr-only">Current Password</label>
          <%= text_input f, :password, type: "password", autocomplete: "password", class: "appearance-none rounded-none relative block w-full px-3 py-2 mt-6 border dark:bg-black dark:text-white text-black border-t-[.5px] border-light-grey dark:border-dark-grey sm:text-sm", placeholder: "New Password" %>
        </div>
      </div>

      <div class="text-red text-xs mt-2"><%= if Map.has_key?(@conn.assigns, :error), do: @error, else: "" %></div>
      <div class="text-red text-xs mt-2"><%= if Map.has_key?(@conn.params, "error"), do: @conn.params["error"], else: "" %></div>

      <div>
        <%= submit do %>
          <button onclick="trackTrial()" type="submit" class="group relative w-full flex justify-center py-2 px-6 text-sm font-medium text-white bg-primary hover:bg-dark-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue">
            Create
          </button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
